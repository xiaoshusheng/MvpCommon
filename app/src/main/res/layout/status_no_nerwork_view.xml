<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status_no_network"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:layout_marginTop="78dp"
        android:src="@drawable/meiyouwang" />

    <TextView
        android:id="@+id/tv_status_no_network_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="无法连接网络"
        android:textColor="@color/color_333333" />

    <TextView
        android:id="@+id/tv_status_no_network_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="请检查网络设置后重试"
        android:textColor="@color/color_999999" />

    <Button
        android:id="@+id/btn_status_no_network_retry"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_orange_bg"
        android:text="重新加载"
        android:textColor="@color/color_FFFFFF" />
</LinearLayout>